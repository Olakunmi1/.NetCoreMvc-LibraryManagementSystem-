@model LibraryCardViewModel

@{
    ViewBag.Title = "New LibraryCard";
}

@*
    The folowing scripts and styles defined below are for styling
*@

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
}

@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
}

<h1> New Library Card</h1>
<div class="row">

    <div class="col-md-12">
        <form asp-controller="libraryCard" asp-action="CreateLibrarycard" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Fees" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-5"> <input asp-for="Fees" class="form-control" /></div>
                <span asp-validation-for="Fees" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="TimeCreated" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6"> <input asp-for="TimeCreated" class="form-control" /></div>
                @*<span asp-validation-for="TimeCreated" class="text-danger"></span>*@
            </div>
            <p><a class="btn btn-primary" role="button" asp-controller="LibraryCard" asp-action="Index"> Cancel </a></p>
            <div>
                <button class="btn btn-primary" type="submit">Create Card</button>
            </div>
        </form>
    </div>
</div>